{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "pretty": true,
    "types": ["jest", "node"],
    "sourceMap": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "test", "scripts"]
}

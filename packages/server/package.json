{
  "name": "@guru-erp/server",
  "version": "0.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly -r tsconfig-paths/register ./node_modules/.bin/moleculer-runner --repl --config src/moleculer.config.ts src/services/**/*.service.ts",
    "cli": "moleculer connect NATS",
    "start": "yarn dev",
    "start:prod": "NODE_ENV=production moleculer-runner services",
    "ci": "NODE_ENV=test jest --watch",
    "test": "NODE_ENV=test jest --coverage",
    "lint": "tslint -p tsconfig.json"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bluebird": "3.5.26",
    "@types/dotenv": "6.1.0",
    "@types/jest": "23.3.14",
    "@types/node": "10.14.1",
    "dotenv": "7.0.0",
    "jest": "23.6.0",
    "jest-cli": "23.6.0",
    "moleculer-repl": "0.5.6",
    "ts-jest": "23.10.5",
    "ts-node": "7.0.1",
    "ts-node-dev": "1.0.0-pre.32",
    "tslint": "5.14.0",
    "typescript": "3.3.4000"
  },
  "dependencies": {
    "gql-tag": "1.0.1",
    "graphql": "14.1.1",
    "ioredis": "4.6.2",
    "moleculer": "0.13.7",
    "moleculer-apollo-server": "moleculerjs/moleculer-apollo-server",
    "moleculer-web": "0.9.0-beta2",
    "nats": "1.2.2",
    "tsconfig-paths": "3.8.0"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}

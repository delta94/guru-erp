{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "pretty": true,
    "types": ["jest", "node"],
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "rootDir": "src",
    "jsx": "react",
    "declarationMap": false,
    "baseUrl": "src"
  },
  "exclude": ["node_modules", "test", "scripts", "lib"]
}
